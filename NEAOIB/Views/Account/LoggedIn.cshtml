
@{
    ViewBag.Title = "LoggedIn";
    Layout = null;
}

<style>
    body {
        margin: 0;
        box-sizing: border-box;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #6A706E;
    }

    .intro {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 980px;
        background: linear-gradient(to bottom, #6A706E 0%, #12664F 100%);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

        .intro h2 {
            font-family: sans-serif;
            font-size: 40px;
            color: #242323;
            font-weight: bold;
            margin: 0;
        }

        .intro h4 {
            font-family: sans-serif;
            font-size: 40px;
            color: #242323;
            font-weight: bold;
            margin: 0;
        }
</style>
<div class="intro">
    @if (Session["UserId"] != null)
    {
        <p style="text-align:center">&nbsp;</p>

        <p style="text-align:center">&nbsp;</p>

        <p style="text-align:center"><span style="font-size:40px; font-family:sans-serif"><strong>You are now logged</strong></span><span style="font-size: 40px; font-family: sans-serif"><strong>&nbsp;in @Session["Username"].ToString()</strong></span></p>

    }
    <p style="text-align:center">&nbsp;</p>

    <p style="text-align:center" font="font-size:20px">Click <a href="/Home/Home" class="btn">HERE</a> to return to the Home Page</p>

</div>